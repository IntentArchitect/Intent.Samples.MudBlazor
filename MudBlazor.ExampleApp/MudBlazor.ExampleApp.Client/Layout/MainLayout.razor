@inherits LayoutComponentBase

<MudThemingProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />
        <MudButton Href="/"
                   Color="Color.Inherit"
                   Class="mx-1 px-3">
            <MudText Typo="Typo.h5">Application</MudText>
        </MudButton>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert"
                       Color="Color.Inherit"
                       Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen"
               ClipMode="DrawerClipMode.Always"
               Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/invoices/invoice-list">Invoices</MudNavLink>
            <MudNavLink Href="/customers">Manage Customers</MudNavLink>
            <MudNavLink Href="/products">Manage Products</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">@Body</MudMainContent>
</MudLayout>
