@page "/products"
@using MudBlazor.ExampleApp.Client.HttpClients.Contracts.Services.Products

<MudButton Variant="Variant.Filled"
           Class="my-2 mr-2"
           Color="Color.Default"
           OnClick="() => AddProductClick()">
    Add Product
</MudButton>
<MudDataGrid T="ProductDto"
             ServerData="LoadDataGridData"
             Hover="true"
             RowClick="(e) => OnRowClick(e.Item.Id.ToString())">
    <ToolBarContent />
    <Columns>
        <PropertyColumn Property="x => x.Name"
                        Class="cursor-pointer" />
        <PropertyColumn Property="x => x.Description"
                        Class="cursor-pointer" />
        <PropertyColumn Property="x => x.Price"
                        Class="cursor-pointer" />
        <PropertyColumn Property="x => x.ImageUrl"
                        Class="cursor-pointer" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="ProductDto"
                          PageSizeOptions="new int[] { 5, 10, 20 }" />
    </PagerContent>
</MudDataGrid>
